<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GoldenShelf.MainPage"             
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0"
                                                                        EndPoint="0,1">
            <GradientStop Color="#eeeeee"
                                                                         Offset="0.7"/>
            <GradientStop Color="#E6B614"
                                                                         Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>


    <StackLayout  VerticalOptions="Center">
        <StackLayout Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center" >

            <Image Source="goldenshelf.png" HeightRequest="230" />
            <Label Text="GoldenShelf" FontSize="42" FontAttributes="Bold" TextColor="#E6B614" HorizontalOptions="CenterAndExpand"/>
        </StackLayout>
        <StackLayout >
            <Button Text="Logın" BackgroundColor="#E6B614" CornerRadius="25" Margin="25,5" Clicked="Button_Clicked" TextColor="White"/>
            <Button Text="Regıster" BackgroundColor="#E6B614" CornerRadius="25" Margin="25,5" Clicked="Button_Clicked_1" TextColor="White"/>
        </StackLayout>
    </StackLayout>
       




</ContentPage>
